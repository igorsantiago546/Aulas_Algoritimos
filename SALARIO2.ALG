Algoritmo "Salario"
Var

Dias, hora, Salario: real

Inicio

Escreval("Quantos dias você trabalhou nesse mês:")
leia(Dias)

hora <- 25

Salario <- Dias * hora



Escreval("------------Descrição------------")
Escreval("Em um mês você trabalhou", Dias ,"dias.")
Escreval("E o seu salario vai ser de", Salario ,"R$")

Fimalgoritmo