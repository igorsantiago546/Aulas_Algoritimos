Algoritmo "Converção"
Var

Valor, Valors, rea, dolar, conv, conve: real

Inicio

dolar <- 5,20
rea <- 0,19

Escreval("Valor a ser convertido em U$:")
leia(Valor)

conv <- Valor * dolar
conve <- Valors * rea

Escreval("Valor U$", Valor , "Valor R$", conv)

Escreval("Valor a ser convertido em R$:")
leia(Valors)

Escreval("Valor R$", Valors, "Valor U$", conve)


Fimalgoritmo